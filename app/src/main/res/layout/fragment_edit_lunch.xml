<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditLunchFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lunchTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redigera dagens lunch"
            android:textSize="30sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleLunchInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="12"
            android:gravity="center"
            android:text="Titel"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/typeLunchInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="12"
            android:gravity="center"
            android:text="Typ"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/alternativeDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/chooseDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Välj dag: "
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/daysRadioButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/mondayRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Måndag" />

            <RadioButton
                android:id="@+id/tuesdayRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tisdag" />

            <RadioButton
                android:id="@+id/wednesdayRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onsdag" />

            <RadioButton
                android:id="@+id/thursdayRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Torsdag" />

            <RadioButton
                android:id="@+id/fridayRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fredag" />
        </RadioGroup>

        <Button
            android:id="@+id/addLunchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:ems="12"
            android:gravity="center"
            android:padding="20dp"
            android:text="Lägg till"
            android:textColor="#FFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daysRadioButtons"
            tools:ignore="MissingConstraints" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>